<div class="hero-unit">
  <h2>All Articles</h2>
  <%- linkTo('Create a new Article', addArticlePath, {class: 'btn pull-right'}); %>
</div>

<div id="articles-list">
<% if (articles) { %>
<% for (var i = 0, ii = articles.length; i < ii; i++) { %>
  <div class="row list-item" id="article-<%= articles[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(articles[i].title, articlePath(articles[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= articles[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>