<div class="hero-unit">
  <h2 class="title"><%= article.title %></h2>
  <%- linkTo('Edit this article', editArticlePath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', articlePath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Article Properties</h2>
<% for(var i in article) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= article[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>